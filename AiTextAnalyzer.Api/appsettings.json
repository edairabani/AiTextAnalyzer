{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenAI": {
   
  },
  "ConnectionStrings": {
    "Default": "Data Source=ai.db",
    "VectorDb": "Host=localhost;Port=5432;Database=vector_db;Username=postgres;Password=postgres"
  },
  "Rag": {
    "DistanceThreshold": 0.65,
    "TopK": 8
  },
  "Jwt": {
    "Key": "THIS_IS_A_SUPER_SECRET_KEY_CHANGE_ME_123456",
    "Issuer": "AiTextAnalyzer",
    "Audience": "AiTextAnalyzerUsers"
  },
  "AI": {
    "Provider": "OpenAI",
    "OpenAI": {
      "Model": "gpt-4.1-mini",
      "EmbeddingModel": "text-embedding-3-small"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "ChatModel": "llama3.1",
      "EmbeddingModel": "nomic-embed-text"
    },
    "AzureOpenAI": {
      "Endpoint": "https://YOUR-RESOURCE.openai.azure.com",
      "ApiKey": "YOUR_AZURE_OPENAI_KEY",
      "ChatDeployment": "gpt-4o-mini",
      "EmbeddingDeployment": "text-embedding-3-small"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithThreadId",
      "WithCorrelationId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}